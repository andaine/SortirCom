{% extends 'base.html.twig' %}

{% block body %}



    <h2>Listes des sorties : </h2>

    <h4>Filtrer les sorties</h4>
    <div class="recherche">
    {{ form_start(filtreForm) }}
    {{ form_end(filtreForm) }}
    </div>
<div class="sortiestyle">
    <table>
        <thead>
        <tr>
            <th class="nomsortie">Nom de la sortie</th>

            <th>Date - Heures</th>
            <th>Clôture inscriptions</th>
            <th>Nombre de participants</th>
            <th>État</th>
            <th>Organisateur</th>
            <th>Participer</th>
        </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}

            <tr>
                <td class="nomsortie"><a href="{{ path('sortie',{'id':sortie.id()}) }}"> {{ sortie.nom }} </a></td>
                <td>{{ sortie.dateHeureDebut|date("d/m/Y - H:i") }}</td>
                <td>{{ sortie.dateLimiteInscription|date("d/m/Y") }}</td>
                <td>{{sortie.inscriptions.count}} / {{ sortie.nbInscriptionMax }}</td>
                <td>{{ sortie.etat.libelle }}</td>
                <td><a href="{{ path('user_monProfil',{'id':sortie.organisateur.id})  }}">{{sortie.organisateur.nom}}</a></td>
                <td><a href="{{ path('participer',{'idsortie':sortie.id()})}}">participer</a></td>
            </tr>

        {% endfor %}

        </tbody>

    </table>
</div>

{% endblock %}

{% block title %}
{{ parent() }} - Accueil
{% endblock %}

